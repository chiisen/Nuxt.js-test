    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "啟動 Nuxt",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            // "port": 9229,
            "timeout": 30000,
            "stopOnEntry": false,
            "sourceMaps": true,
            "smartStep": true,
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/Nuxtjs" // 指定專案目錄
        }
    ]
